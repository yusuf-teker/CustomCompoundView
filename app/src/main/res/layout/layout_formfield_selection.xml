<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/rootLL">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/form_field_title"
            style="@style/formfield_title_text"
            tools:text ="@string/header"
            />

        <ImageButton
            android:id="@+id/form_field_tooltip"
            style="@style/formfield_tip_button"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/spinnerRootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_weight=".28"
        android:background="@drawable/custom_input"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/form_field_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:spinnerMode="dialog" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

    </RelativeLayout>
    <!--
    <Spinner
        android:id="@+id/form_field_spinner"
        android:spinnerMode="dialog"
        style="@style/formfield_spinner"
        android:background="@drawable/custom_input"
        />
-->



</LinearLayout>