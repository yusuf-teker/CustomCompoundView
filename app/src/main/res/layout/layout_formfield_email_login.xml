<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/formfield_root_padding">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/form_field_title"
            style="@style/formfield_title_text"
            android:text = "@string/user_login" />

        <ImageButton
            android:id="@+id/form_field_tooltip"
            style="@style/formfield_tip_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/email"
            style="@style/formfield_header_text"/>

        <EditText
            android:id="@+id/formfield_mail_edittext"
            android:layout_width="match_parent"
            style="@style/formfield_mail_edittext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password_header_1"
            android:text="@string/password"
            style="@style/formfield_header_text"/>

        <EditText
            android:id="@+id/formfield_password_edittext"
            android:layout_width="match_parent"
            style="@style/formfield_password_edittext"/>
    </LinearLayout>

</LinearLayout>